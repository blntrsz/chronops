{
  "$schema": "https://json.schemastore.org/package",
  "name": "chronops",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "module": "index.ts",
  "scripts": {
    "dev": "bun --filter '*' dev",
    "typecheck": "bun --filter '*' typecheck",
    "format": "bun --filter '*' format",
    "format:fix": "bun --filter '*' format:fix",
    "lint": "bun --filter '*' lint",
    "lint:fix": "bun --filter '*' lint:fix",
    "lint:repo": "sherif",
    "lint:repo:fix": "sherif --fix",
    "scan": "bun run lint && bun run format && bun run typecheck && bun run lint:repo",
    "scan:fix": "bun run lint:fix && bun run format:fix && bun run typecheck && bun run lint:repo:fix"
  },
  "dependencies": {
    "@effect/platform": "^0.94.2",
    "@tanstack/react-table": "^8.21.3",
    "effect": "^3.19.15"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "esbuild": "0.27.2",
    "globals": "^17.2.0",
    "oxfmt": "^0.27.0",
    "oxlint": "^1.42.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
