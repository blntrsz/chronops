{
  "$schema": "https://json.schemastore.org/package",
  "name": "@chronops/core",
  "private": true,
  "type": "module",
  "module": "index.ts",
  "exports": {
    "./*": {
      "default": "./src/*.ts"
    }
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "auth:gen": "bun x @better-auth/cli@latest generate --config ./src/auth/server.ts",
    "auth:migrate": "bun x @better-auth/cli@latest migrate --config ./src/auth/server.ts",
    "auth:gen": "bun x @better-auth/cli@latest generate --config ./src/auth/server.ts --output ./src/auth/sql.ts",
    "db": "drizzle-kit"
  },
  "dependencies": {
    "@chronops/domain": "workspace:^",
    "@effect-atom/atom-react": "^0.5.0",
    "@effect/platform": "^0.94.2",
    "@effect/platform-bun": "^0.87.1",
    "@effect/rpc": "^0.73.0",
    "@effect/sql": "^0.49.0",
    "@effect/sql-pg": "^0.50.1",
    "better-auth": "^1.4.18",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.1",
    "effect": "^3.19.15",
    "pg": "^8.18.0",
    "ulid": "^3.0.2"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/pg": "^8.16.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
